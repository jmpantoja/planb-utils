{
    "name": "planb/utils",
    "description": "utilidades para proyectos php",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jose Manuel Pantoja",
            "email": "jmpantoja@gmail.com",
            "homepage": "https://github.com/jmpantoja/"
        }
    ],
    "autoload": {
        "files": [
            "src/Resources/functions/beautify.php",
            "src/Resources/functions/hydrator.php",
            "src/Resources/functions/number.php",
            "src/Resources/functions/path.php",
            "src/Resources/functions/text.php",
            "src/Resources/functions/type.php"
        ],
        "psr-4": {
            "PlanB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\PlanB\\": "spec/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "apcu-autoloader": true
    },
    "require-dev": {
        "ciaranmcnulty/phpspec-typehintedmethods": "^3.0",
        "leanphp/phpspec-code-coverage": "^4.2",
        "memio/spec-gen": "^0.8.4",
        "phpspec/phpspec": "^4.3",
        "symfony/var-dumper": "^4.1"
    },
    "require": {
        "ext-ds": "^1.2",
        "marc-mabe/php-enum": "^3.0",
        "opis/closure": "^3.0",
        "php-ds/php-ds": "^1.2",
        "symfony/options-resolver": "^4.1",
        "symfony/serializer": "^4.1"
    }
}
